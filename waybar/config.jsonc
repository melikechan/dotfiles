// -*- mode: jsonc -*-
{
    "height": 32,
    "spacing": 4,
    // Bar
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "modules-center": [
        "custom/media"
    ],
    "modules-right": [
        "privacy",
        "idle_inhibitor",
        "pulseaudio",
        "cpu",
        "memory",
        "backlight",
        "temperature",
        "power-profiles-daemon",
        "battery",
        "hyprland/language",
        "custom/clock",
        "tray",
        "bluetooth",
        "network",
        "custom/power"
    ],
    // Modules
    "hyprland/workspaces": {
        "format": "{name}",
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1"
    },
    "hyprland/window": {
        "format": "{}",
        "rewrite": {
            "(.*) ‚Äî Mozilla Firefox": "üåé $1",
            "(.*) - VSCodium": "üíª $1",
            "(.*) - zsh": "> [$1]"
        },
        "separate-outputs": true
    },
    "hyprland/language": {
        "format": "{}",
        "format-en": "üá∫üá∏ EN",
        "format-tr": "üáπüá∑ TR",
        "format-de": "üá©üá™ DE"
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "privacy": {
        "icon-spacing": 4,
        "icon-size": 18,
        "transition-duration": 250,
        "modules": [
            {
                "type": "screenshare",
                "tooltip": true,
                "tooltip-icon-size": 16
            },
            {
                "type": "audio-out",
                "tooltip": true,
                "tooltip-icon-size": 16
            },
            {
                "type": "audio-in",
                "tooltip": true,
                "tooltip-icon-size": 16
            }
        ],
        "ignore-monitor": true
    },
    "tray": {
        "icon-size": 21,
        "spacing": 10,
        "icons": {}
    },
    "custom/clock": {
        "exec": "$HOME/.config/waybar/scripts/clock.py",
        "return-type": "json",
        "interval": 1,
        "format": "{}",
        "on-scroll-up": "$HOME/.config/waybar/scripts/clock.py up && pkill -RTMIN+8 waybar",
        "on-scroll-down": "$HOME/.config/waybar/scripts/clock.py down && pkill -RTMIN+8 waybar",
        "tooltip": true
    },
    "cpu": {
        "format": "{usage}% Ôãõ",
        "tooltip": true
    },
    "memory": {
        "format": "{}% ÔÉâ"
    },
    "temperature": {
        "critical-threshold": 80,
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": [
            "Ôù´",
            "Ôãâ",
            "Ôù©"
        ]
    },
    "backlight": {
        "format": "{percent}% {icon}",
        "format-icons": [
            "Óéç",
            "Óèì",
            "Óèë",
            "Óèè",
            "Óèé",
            "Óèç",
            "Óèä",
            "Óèà",
            "Óéõ"
        ]
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% Ôóß",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
        "format-icons": [
            "ÔâÑ",
            "ÔâÉ",
            "ÔâÇ",
            "ÔâÅ",
            "ÔâÄ"
        ]
    },
    "bluetooth": {
        "format": "Ôäî",
        "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
        "on-click": "kitty --class bluetuith bluetuith"
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "ÔÉß",
            "performance": "ÔÉß",
            "balanced": "Ôâé",
            "power-saver": "ÔÅ¨"
        }
    },
    "network": {
        "format-wifi": "Ôá´",
        "format-ethernet": "Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "‚ö†",
        "tooltip-format-wifi": "{ifname}\n{essid} ({signalStrength}%)\nUp: {bandwidthUpBytes}, Down: {bandwidthDownBytes}",
        "tooltip-format-ethernet": "{ifname}\n{ipaddr}/{cidr}\nUp: {bandwidthUpBytes}, Down: {bandwidthDownBytes}",
        "on-click": "kitty --class nmtui nmtui"
    },
    "pulseaudio": {
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        "format-source": "ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": [
                "ÔÄ¶",
                "ÔÄß",
                "ÔÄ®"
            ]
        },
        "on-click": "pavucontrol"
    },
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "youtube": "ÔÖß",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/scripts/mediaplayer.py 2> /dev/null"
    },
    "custom/power": {
        "format": "‚èª ",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/power_menu.xml",
        "menu-actions": {
            "lock": "$HOME/.config/waybar/scripts/power.sh lock",
            "logout": "$HOME/.config/waybar/scripts/power.sh logout",
            "suspend": "$HOME/.config/waybar/scripts/power.sh suspend",
            "hibernate": "$HOME/.config/waybar/scripts/power.sh hibernate",
            "reboot": "$HOME/.config/waybar/scripts/power.sh reboot",
            "shutdown": "$HOME/.config/waybar/scripts/power.sh shutdown"
        }
    }
}